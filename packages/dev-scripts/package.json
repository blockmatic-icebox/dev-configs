{
  "name": "@blockmatic/dev-scripts",
  "version": "1.2.1",
  "license": "MIT",
  "description": "Build, lint, test, format, and release your JS/TS library.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blockmatic/dev-scripts.git"
  },
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "types",
  "bin": {
    "dev-scripts": "./bin/dev-scripts"
  },
  "files": [
    "bin",
    "cjs",
    "config",
    "esm",
    "types"
  ],
  "scripts": {
    "clean": "rm -rf cjs esm types",
    "build": "node ./bin/dev-scripts build",
    "test": "node ./bin/dev-scripts test",
    "lint": "node ./bin/dev-scripts lint",
    "bootstrap": "$npm_execpath run clean && tsc --allowJs --outDir cjs --noEmit false --module CommonJS",
    "prepublishOnly": "$npm_execpath run bootstrap && $npm_execpath run build",
    "prepare": "$npm_execpath run bootstrap"
  },
  "dependencies": {
    "@blockmatic/eslint-config": "^1.1.7",
    "@blockmatic/prettier-config": "^1.0.0",
    "@blockmatic/tsconfig": "^1.2.1",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/cross-spawn": "^6.0.0",
    "@types/debug": "^4.1.2",
    "@types/jest": "^24.0.11",
    "@types/react": "^16.8.19",
    "@types/react-dom": "^16.8.4",
    "commander": "^2.20.0",
    "commitizen": "^3.1.1",
    "cross-spawn-promise": "^0.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "debug": "^4.1.1",
    "eslint": "^5.16.0",
    "jest": "^24.5.0",
    "jest-junit": "^6.3.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.18.2",
    "read-pkg-up": "^6.0.0",
    "semantic-release": "^15.13.17",
    "ts-jest": "^24.0.2",
    "typescript": "3.5"
  },
  "devDependencies": {
    "@types/rimraf": "^2.0.2",
    "@types/tempy": "^0.2.0",
    "object.fromentries": "^2.0.0",
    "rimraf": "^2.6.3",
    "tempy": "^0.2.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=10"
  }
}
